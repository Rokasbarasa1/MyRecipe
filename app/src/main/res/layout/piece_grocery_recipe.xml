<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="5dp"
    android:background="@drawable/rounded_corners_color_primary">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/add_tag_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/rounded_corners_color_secondary">

        <TextView
            android:id="@+id/piece_grocery_recipe_ingredient_count_finished"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="Left to collect: 0"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/piece_grocery_recipe_ingredient_count"
            app:layout_constraintTop_toBottomOf="@+id/piece_grocery_recipe_name" />

        <TextView
            android:id="@+id/piece_grocery_recipe_ingredient_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="Ingredients: 0"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@+id/piece_grocery_recipe_ingredient_count_finished"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/piece_grocery_recipe_name" />

        <TextView
            android:id="@+id/piece_grocery_recipe_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginHorizontal="5dp"
            android:text="Name of recipe"
            android:textSize="24sp"
            android:translationZ="90dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
